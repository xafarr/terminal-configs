  mergeOptions = --ff-only
[diff]
  tool = vimdiff
  colorMoved = default
[difftool]
  # Be able to abort all diffs with `:cq` or `:cquit`
  trustExitCode = true
  prompt = false
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[http]
  sslVerify = true

[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false # required for git 2.37.0

