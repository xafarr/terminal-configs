	rebase = true
[core]
    editor = vim
[merge]
    ff = only
[branch "master"]
    mergeOptions = --ff-only
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictStyle = diff3
[mergetool]
	keepBackup = false
	prompt = false
[http]
	sslVerify = true
