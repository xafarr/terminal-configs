[pull]
  rebase = true
[push]
  autoSetupRemote = true
[core]
  editor = nvim
  pager = delta
[merge]
  ff = only
  conflictstyle = diff3
  tool = vimdiff
[mergetool]
  keepBackup = false
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[branch "master"]
  mergeOptions = --ff-only
[branch "main"]
  mergeOptions = --ff-only
[diff]
  tool = vimdiff
  colorMoved = default
[difftool]
  # Be able to abort all diffs with `:cq` or `:cquit`
  trustExitCode = true
  prompt = false
[http]
  sslVerify = true

[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false # required for git 2.37.0

