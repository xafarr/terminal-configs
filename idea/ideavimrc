let mapleader = "," " Set leader key to comma (,)
set nocompatible
set encoding=utf8
set number relativenumber
set clipboard=unnamed,unnamedplus " Integrate with system clipboard
set showcmd
set scrolloff=5 " 5 line above/below cursor when scrolling
set incsearch "incremental search
set ignorecase "ignore case
set smartcase "ignore ignorecase if search pattern contains uppercase
set surround " vim-surround plugin support
set multiple-cursors " vim-multiple-cursor plugin support
set tabstop=4       " number of visual spaces per TAB
set softtabstop=4   " number of spaces in tab when editing
set shiftwidth=4    " spaces in newline start
" set expandtab       " tabs are spaces
set cursorline          " highlight current line
filetype indent on      " load filetype-specific indent files
set wildmenu            " visual autocomplete for command menu
set showmatch           " highlight matching [{()}]
set hidden
set laststatus=2
set hlsearch

" toggle hlsearch
nnoremap <silent> <Leader>hl :set hls!<cr>
" --- backup and swap files ---
set nobackup
set nowritebackup
set noswapfile

" Clear search
nnoremap <Leader>, :let @/=''<cr>:noh<cr>
" Faster scrolling
nnoremap <C-e> 3<C-e>
nnoremap <C-y> 3<C-y>

" toggle relative line number
nnoremap <silent> <Leader>n :set rnu!<cr>

" Alt-j <A-j> mapped to ∆
" Alt-k <A-k> mapped to ˚
nnoremap ∆ :m .+1<CR>==
nnoremap ˚ :m .-2<CR>==
inoremap ∆ <Esc>:m .+1<CR>==gi
inoremap ˚ <Esc>:m .-2<CR>==gi
vnoremap ∆ :m '>+1<CR>gv=gv
vnoremap ˚ :m '<-2<CR>gv=gv
